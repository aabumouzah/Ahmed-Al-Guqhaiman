issn = {2327-5219},
journal = {Journal of Computer and Communications},
keywords = {Acoustic Communications, Underwater Acoustic Senso},
mendeley-groups = {PhD Research/Summer 2018,PhD Research/Summer 2018/Week 8,PhD Research/UWSN Dissertation/Underwater Design Architecture Issues Challenges,Journals},
number = {05},
