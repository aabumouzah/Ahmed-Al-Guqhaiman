isbn = {9781450340366},
journal = {Proceedings of the 10th International Conference on Underwater Networks {\&} Systems - WUWNET '15},
keywords = {end-to-end delay,medium access control,reliability,underwater wireless sensor net-,work},
mendeley-groups = {PhD Research/Summer 2018,PhD Research/Summer 2018/Week 7,PhD Research/UWSN Dissertation/Underwater MAC,Journals},
number = {node 1},
pages = {1--5},
title = {{On-demand Pipelined MAC for Multi-hop Underwater Wireless Sensor Networks}},
