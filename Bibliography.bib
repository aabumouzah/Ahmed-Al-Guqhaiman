@article{Ibrahim2013,
abstract = {In underwater acoustic sensor network, deploying multiple surface-level radio capable gateways is an efficient way to alleviate the burdens of high propagation delay and high error probability during transmission. However, the locations of gateways need to be carefully selected to maximize the benefit in a cost-effective way. In this paper, we present our formulation of the surface gateway deployment problem as an integer linear programming (ILP) and we solve the problem with heuristic approaches to provide a realtime solution for large scale deployment problems. By applying the proposed heuristic algorithms to a variety of deployment scenarios, we show that they are nearly optimal for practical cases, which opens the door for dynamic deployment. Therefore, we extend our solution to a dynamic case and propose a modified framework that integrates Aqua-sim, a NS2-based underwater wireless sensor network simulator. Our simulation result shows the benefits of dynamic gateway redeployment over static deployment. {\textcopyright} 2013 Elsevier B.V. All rights reserved.},
author = {Ibrahim, Saleh and Liu, Jun and Al-Bzoor, Manal and Cui, Jun Hong and Ammar, Reda},
doi = {10.1016/j.adhoc.2013.05.011},
file = {:C$\backslash$:/Users/Ahmed/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Ibrahim et al. - 2013 - Towards efficient dynamic surface gateway deployment for underwater network.pdf:pdf},
issn = {15708705},
journal = {Ad Hoc Networks},
keywords = {Gateway deployment,Optimization framework,UWSN},
mendeley-groups = {PhD Research/Summer 2018,PhD Research/Summer 2018/Week 6,PhD Research/UWSN Dissertation,PhD Research/UWSN Dissertation/Underwater Topology and Sensor Deployment,Journals},
number = {8},
pages = {2301--2312},
publisher = {Elsevier B.V.},
title = {{Towards efficient dynamic surface gateway deployment for underwater network}},
